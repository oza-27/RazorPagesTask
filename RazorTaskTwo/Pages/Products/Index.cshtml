@page
@model RazorTaskTwo.Pages.Products.IndexModel


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-4">
            <h2 class="text-primary"> Product List </h2>
        </div>
        <div class="col-2 p-1">
            <select class="form-select" id="search">
                <option value="Name"> Name </option>
                <option value="Category"> Category</option>
            </select>
        </div>
        <div class="col-2">
            <input class="form-control" id="searchBar" />
        </div>
        <div class="col-2">
            <a class="form-control btn btn-info" onclick="SearchData()"> Search </a>
        </div>
        <div class="col-2 text-end">
            <a asp-page="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create a New Product
            </a>
        </div>
    </div>
</div>
<br />
<table id="tblData" class="table table-bordered table-striped text-center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Product) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.ProductId"> Edit </a>
                    <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.ProductId"> Delete </a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>

@section Scripts{
    <script src="~/js/product.js"></script>
}